<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_color_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jspann.dailydroid.ColorSelectorActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Select Color:"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_blue_dark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBlueDark"
        app:layout_constraintStart_toEndOf="@+id/btn_blue"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#0044aa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_blue_light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBlueLight"
        app:layout_constraintStart_toEndOf="@+id/btn_blue_dark"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_blue_bright"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#30e3ff"
        app:layout_constraintStart_toEndOf="@+id/btn_blue_light"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_green_light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGreenLight"
        app:layout_constraintStart_toEndOf="@+id/btn_green"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue_dark" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGreenDark"
        app:layout_constraintStart_toEndOf="@+id/btn_green_dark"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue_dark" />

    <Button
        android:id="@+id/btn_green_dark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#208800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue_dark" />

    <Button
        android:id="@+id/btn_orange_dark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#e45f00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_green_dark" />

    <Button
        android:id="@+id/btn_orange_light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#ffaa2b"
        app:layout_constraintStart_toEndOf="@+id/btn_orange"
        app:layout_constraintTop_toBottomOf="@+id/btn_green_dark" />

    <Button
        android:id="@+id/btn_orange"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorOrangeDark"
        app:layout_constraintStart_toEndOf="@+id/btn_orange_dark"
        app:layout_constraintTop_toBottomOf="@+id/btn_green_dark" />

    <Button
        android:id="@+id/btn_orange_bright"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#fc0"
        app:layout_constraintStart_toEndOf="@+id/btn_orange_light"
        app:layout_constraintTop_toBottomOf="@+id/btn_green_dark" />

    <Button
        android:id="@+id/btn_red_dark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#a71414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_orange_dark" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#ed0000"
        app:layout_constraintStart_toEndOf="@+id/btn_red_dark"
        app:layout_constraintTop_toBottomOf="@+id/btn_orange_dark" />

    <Button
        android:id="@+id/btn_red_light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="#ff3c3c"
        app:layout_constraintStart_toEndOf="@+id/btn_red"
        app:layout_constraintTop_toTopOf="@+id/btn_red_dark" />

    <Button
        android:id="@+id/btn_red_light2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="#faa"
        app:layout_constraintStart_toEndOf="@+id/btn_red_light"
        app:layout_constraintTop_toTopOf="@+id/btn_red_dark" />

    <Button
        android:id="@+id/btn_purple_dark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#422064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_red_dark" />

    <Button
        android:id="@+id/btn_purple_bright"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#cc85ff"
        app:layout_constraintStart_toEndOf="@+id/btn_purple_light2"
        app:layout_constraintTop_toBottomOf="@+id/btn_red_dark" />

    <Button
        android:id="@+id/btn_purple_light2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPurpleLight"
        app:layout_constraintStart_toEndOf="@+id/btn_purple"
        app:layout_constraintTop_toBottomOf="@+id/btn_red_dark" />

    <Button
        android:id="@+id/btn_purple"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#64377b"
        app:layout_constraintStart_toEndOf="@+id/btn_purple_dark"
        app:layout_constraintTop_toBottomOf="@+id/btn_red_dark" />

    <Button
        android:id="@+id/btn_grey_dark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#555"
        app:layout_constraintStart_toEndOf="@+id/btn_black"
        app:layout_constraintTop_toBottomOf="@+id/btn_purple_dark" />

    <Button
        android:id="@+id/btn_black"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="#222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_purple_dark" />

    <Button
        android:id="@+id/btn_white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#aaa"
        app:layout_constraintStart_toEndOf="@+id/btn_grey_light"
        app:layout_constraintTop_toBottomOf="@+id/btn_purple_dark" />

    <Button
        android:id="@+id/btn_grey_light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#888"
        app:layout_constraintStart_toEndOf="@+id/btn_grey_dark"
        app:layout_constraintTop_toBottomOf="@+id/btn_purple_dark" />

    <Button
        android:id="@+id/btn_green_bright"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#6dff6d"
        app:layout_constraintStart_toEndOf="@+id/btn_green_light"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue_dark" />

    <Button
        android:id="@+id/btn_default"
        android:layout_width="92dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/appForeground"
        android:text="None"
        android:textColor="@color/appText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
