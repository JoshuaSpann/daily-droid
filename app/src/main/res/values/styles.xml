<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- GENERAL BACKGROUNDS & TEXT -->
        <item name="android:windowBackground">@color/appBackground</item>
        <item name="android:textColor">@color/appText</item>

        <!-- SPINNER, MENU ITEMS & BOTTOM ACTION BAR -->
        <!-- This costs colordrawable backgrounds but sets the spinner background
        <item name="android:backgroundTint">@color/appBackground</item-->
        <!--
        API:
            colorBackgroundFloating
        BUPKISS:
            panelBackground
            backgroundSplit
            backgroundStacked
            colorBackground
            headerBackground
            popupBackground
            keyBackground
            selectableItemBackground
        -->
        <item name="android:selectableItemBackground">@color/appBackground</item>

        <!-- MENU ITEMS -->
        <item name="android:itemBackground">@color/appBackground</item>

        <!-- SETTINGS ACTIVITY FRAGMENTS -->
        <item name="android:textColorPrimary">@color/appText</item>
        <item name="android:textColorSecondary">@color/appText</item>

        <!-- ICONS -->
        <item name="android:tint">@color/appText</item>
    </style>

</resources>
