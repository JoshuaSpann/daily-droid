<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- GENERAL BACKGROUNDS & TEXT -->
        <item name="android:windowBackground">@color/appBackground</item>
        <item name="android:textColor">@color/appText</item>

        <!-- SPINNER, MENU ITEMS & BOTTOM ACTION BAR -->
        <item name="android:backgroundTint">@color/appBackground</item>

        <!-- MENU ITEMS >
        <item name="android:itemBackground">@color/appBackground</item-->

        <!-- SETTINGS ACTIVITY FRAGMENTS -->
        <item name="android:textColorPrimary">@color/appText</item>
        <item name="android:textColorSecondary">@color/appText</item>

        <!-- ICONS -->
        <item name="android:tint">@color/appText</item>
    </style>

</resources>
